<div style="font-size: 2em; font-weight: bold; text-align: center;">
   Let's Dive into Some TechPost
</div>

        <div class="w-full md:w-2/3 mx-auto mb-4 flex justify-between items-center">
            <div class="text-4xl">
                {# <a href="{{ path('app_post ') }}">Home</a> #}
                {% block bread %}
                {% endblock %}
            </div>
            <div class="text-right">
               
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="flex justify-center space-x-4">
    <div>
        <a href="{{ path('app_micro_post_add') }}" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Add New</a>
    </div>
    <div>
        <a href="{{ path('app_logout') }}" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Logout</a>
    </div>
    <div>
        <a href="{{ path('app_settings_profile') }}" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">Profile Settings</a>
    </div>
</div>

                {% else %}
                <div class="flex justify-center space-x-4">
                <div>
                <a href="{{ path('app_login')}}">Login</a>
                </div>
                    
               

                 <div>
                        <a href="{{ path('app_register') }}">Register</a>
                    </div>
</div>
                {% endif %}
            </div>
        </div>
        <div class="w-full md:w-2/3 mx-auto">
    {% for message in app.flashes('success')  %}
     <div class="rounded-md p-2 border-green-300 bg-green-50 border dark:border-green-600 dark:bg-green-700 dark:text-white mb-4">{{ message }}</div>
  {% endfor %}
